<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.iff.pooa20162.sistemarestaurante">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="restaurante.db" />
        <meta-data
            android:name="VERSION"
            android:value="4" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="br.iff.edu.br.pooa20162.sistemarestaurante" />

        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Cardapio"
            android:label="@string/title_activity_cardapio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Pedido"
            android:label="@string/title_activity_pedido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.Conta" />
        <activity
            android:name=".Activity.ListaCliente"
            android:label="@string/title_activity_lista_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.CadastroCliente" />
        <activity android:name=".Activity.EscolhaCardapio"></activity>
    </application>

</manifest>